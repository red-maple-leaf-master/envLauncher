<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="20"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="top.oneyi.jdktool.controller.DownloadProgressDialogController"
      style="-fx-padding: 20; -fx-alignment: center;">

    <!-- 文件大小 -->
    <HBox alignment="CENTER">
        <Label fx:id="sizeLabel" style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
    </HBox>

    <!-- 下载状态 -->
    <HBox alignment="CENTER">
        <Label fx:id="statusLabel"
               text="下载中" style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
    </HBox>

    <!-- 进度条 -->
    <HBox alignment="CENTER">
        <ProgressBar fx:id="progressBar" style="-fx-accent: #4caf50;"
                     minWidth="400"
                     minHeight="20"/>
    </HBox>

    <!-- 取消按钮 -->
    <HBox alignment="CENTER">
        <Button text="❌ 取消下载"
                onAction="#onCancelDownload" style="
                    -fx-background-color: #ff4d4d;
                    -fx-text-fill: white;
                    -fx-font-size: 14px;
                    -fx-padding: 10 20;
                    -fx-background-radius: 8;
                    -fx-border-radius: 8;
                    -fx-cursor: hand;"/>
    </HBox>

</VBox>
