<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="30"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="top.oneyi.envLauncher.controller.DownloadProgressDialogController"
      style="-fx-padding: 30; -fx-background-color: #f0f4f8; -fx-alignment: center;">

    <!-- 文件大小 -->
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="sizeLabel" text="文件大小: " style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <Label fx:id="sizeValueLabel" text="" style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
    </HBox>

    <!-- 下载状态 -->
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="statusLabel" text="下载状态: " style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <Label fx:id="statusValueLabel" text="下载中" style="-fx-font-size: 16px; -fx-text-fill: #4caf50;"/>
    </HBox>

    <!-- 进度条 -->
    <HBox alignment="CENTER">
        <ProgressBar fx:id="progressBar" style="-fx-accent: linear-gradient(to right, #4caf50, #8bc34a); -fx-background-color: #e0e0e0;"
                     prefWidth="400" minHeight="20" />
    </HBox>

    <!-- 下载速度 -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="下载速度: " style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <Label fx:id="speedLabel" text="" style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
    </HBox>

    <!-- 取消按钮 -->
    <HBox alignment="CENTER">
        <Button text="❌ 取消下载" onAction="#onCancelDownload" style="
            -fx-background-color: #ff5722;
            -fx-text-fill: white;
            -fx-font-size: 16px;
            -fx-padding: 10 20;
            -fx-background-radius: 25;
            -fx-border-radius: 25;
            -fx-cursor: hand;
            -fx-font-weight: bold;"/>
    </HBox>

</VBox>
